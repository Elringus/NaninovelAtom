name: 'NaniScript'
scopeName: 'source.naniscript'
type: 'tree-sitter'
parser: 'tree-sitter-naninovel'

fileTypes: [
  'nani'
]

comments:
	start: '; '

scopes:
  'label': 'string'
  'comment': 'comment'
  'define_name': 'keyword.control'
  'define_sign': 'keyword.control'
  'command_name': 'entity.name.function'
  'command_line': 'entity.name.function'
  'inline_command': 'entity.name.function'
  'named_arg': 'constant'
  'unnamed_arg': 'meta.class'

# Scope colors:
#  green 	-> string
#  azure 	-> tring.regexp
#  violet 	-> keyword.control
#  blue 	-> entity.name.function
#  yellow 	-> meta.class
#  brown 	-> constant

